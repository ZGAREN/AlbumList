<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/thumbnailUrl_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:labelFor="@+id/phone_label"
            android:hint="url" />
        <TextView
            android:layout_margin="16dp"
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Id Album : "
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/id_album_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id_Album"
            android:autofillHints="" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="ID : "
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/Id_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id"
            android:autofillHints="id"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enter_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Titre : "
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="titre"
            android:autofillHints="" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Url : "
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/url_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:labelFor="@+id/phone_label"
            android:hint="url" />

    </LinearLayout>

</LinearLayout>